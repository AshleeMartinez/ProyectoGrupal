package Proyecto;
import java.util.Scanner;
import java.time.LocalDate;

public class Factura extends Producto {
	private static final Factura[] factura = null;
	private double gananciaTotal;
	public int codigoProducto;
	public String Marca;
	public String Cliente;


	public Factura(String nombre, double precio, int unidades) {
		super(nombre, precio, unidades);
		this.getNombre();
		this.getPrecio();
		this.getUnidades();
	
	}
	
	class Venta extends Producto {
	    private LocalDate fechaVenta;
	    private int cantidad;
	    private double gananciasVenta;

	    public Venta(String nombre, LocalDate fechaVenta, int cantidad, double gananciasVenta) {
	        super(nombre, 0, cantidad); 
	        this.fechaVenta = fechaVenta;
	        this.cantidad = cantidad;
	        this.gananciasVenta = gananciasVenta;
	    }

	    public LocalDate getFechaVenta() {
	        return fechaVenta;
	    }

	    public void setFechaVenta(LocalDate fechaVenta) {
	        this.fechaVenta = fechaVenta;
	    }

	    public int getCantidad() {
	        return cantidad;
	    }

	    public void setCantidad(int cantidad) {
	        this.cantidad = cantidad;
	    }

	    
	    public double getGananciasVenta() {
	        return gananciasVenta;
	    }

	    public void setGananciasVenta(double gananciasVenta) {
	        this.gananciasVenta = gananciasVenta;
	    }
	}
	
	public String Cliente() {
    	return Cliente;
    }
    
    public void setCliente(String Cliente) {
    	this.Cliente= Cliente;
    }
	public double getGananciaTotal() {
    return gananciaTotal;
	}

	public void setGanancia(double gananciaTotal) {
    this.gananciaTotal = gananciaTotal;
	}
	
	public int getCodigoProducto() {
		return codigoProducto;
	}
	
	public void setCodigoProducto(int codigoProducto) {
		this.codigoProducto= codigoProducto;
	}
	
	public String getMarca() {
		return Marca;
	}
	public void setMarca(String Marca) {
		this.Marca= Marca;
	}
	
	public void CalculoDeMontoTotal(int cantidad, int precio) {
		Scanner pantalla= new Scanner(System.in);
		
		gananciaTotal= cantidad * precio;
		System.out.println("La ganancia total es "+gananciaTotal);
	}
	
	public void PedirDatosDeFacura() {
		Scanner pantalla = new Scanner(System.in);
		System.out.println("Ingrese la marca de la empresa");
		Marca= pantalla.next();
		
		System.out.println("Ingrese el nombre del cliente");
		Cliente= pantalla.next();
		
		System.out.println("Ingrese el codigo del producto");
		codigoProducto= pantalla.nextInt();
		}
	
	public void Factura() {
		Scanner tc = new Scanner(System.in);
		for(Factura item: factura) {
			System.out.printf("///////Factura////////");
			System.out.println("**********************");
			System.out.println("Marca "+Marca);
			System.out.println("Cliente "+ Cliente);
			System.out.println("Nombre del producto "+getNombre());
			System.out.println("Codigo del producto "+codigoProducto);
			System.out.println("Unidades "+getUnidades());
			System.out.println("Precio "+getPrecio());
			System.out.println("Ganancia Total "+gananciaTotal);
		}
	}
}
